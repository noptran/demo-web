@model Common.ViewModels.ResetPassword.ResetPasswordVM;
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Account/_Layout.cshtml";
}

<div class="row m-0 h-100">
    <div class="hidden-md-down col-md-12 col-lg-6 col-xl-7" style="background: url(/img/backgrounds/loginbg.jpg) no-repeat center; background-size: cover;">

    </div>
    <div class="col-md-12 col-lg-6 col-xl-5">
        <div class="login d-flex align-items-center py-5 h-100">
            <div class="container px-4 px-sm-0">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-md-8 col-lg-7 col-xl-7 col-xxl-6 m-auto">
                        <div class="mb-2 text-center w-100">
                            <a href="/">
                                <img src="/img/logo.png" width="200" class="flex-wrap mb-2" alt="logo" aria-roledescription="logo">
                            </a>
                        </div>
                        <div class="card p-4 rounded-plus">
                            <form asp-action="ResetPassword">
                                @if (ViewBag.SendEmail == true)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true"><i class="fal fa-times-square"></i></span>
                                        </button>
                                        Your password set Successfully.
                                    </div>
                                }
                                @if (ViewBag.SendEmail == false)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true"><i class="fal fa-times-square"></i></span>
                                        </button>
                                        <strong>Email</strong> not found.
                                    </div>
                                }
                                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="fal fa-times-square"></i></span>
                                    </button>
                                    <div asp-validation-summary="All" class=""></div>
                                </div>
                                <div class="form-group">
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input readonly asp-for="Email" class="form-control" placeholder="Recovery email" required />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Confirm Password</label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <input type="hidden" asp-for="Token" class="form-control" />
                                </div>
                                <div class="row no-gutters">
                                    <div class="col-12 ml-auto text-right">
                                        <button type="submit" class="btn btn-primary"><i class="fal fa-redo mr-1"></i> Set Password</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $("#js-login-btn").click(function (event) {
            // Fetch form to apply custom Bootstrap validation
            var form = $("#js-login")
            if (form[0].checkValidity() === false) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.addClass('was-validated');
            // Perform ajax submit here...
        });
    </script>
}